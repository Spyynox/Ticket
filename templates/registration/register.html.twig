{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="inscription">
        <h1>Inscription</h1>

        {% if app.user %}
                <div class="mb-3">
                    {{ app.user.username }}, deconnectez-vous pour cr√©er un nouveau compte.
                </div>
        {% endif %}

        {% if not app.user %}
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.username, {'label' : 'Pseudo'}) }}
                {{ form_row(registrationForm.plainPassword, {'label' : 'Mot de passe'}) }}
                {{ form_row(registrationForm.agreeTerms, {'label' : 'Acceptez les conditions'}) }}

                <button class="btn btn-lg btn-success">S'inscrire</button>
            {{ form_end(registrationForm) }}
        {% endif %}
    </div>
{% endblock %}
